@model IEnumerable<TrungTamTA.Models.HocVien>

@{
    ViewBag.Title = "themhvvaolop";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách học viên lớp: @ViewBag.namelh</h1>
                <h4>@ViewBag.count /30</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách học viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}



<table class="table">
    <tr>
        <th>
            STT
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IDHocvien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHocVien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CapDo)
        </th>
    </tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        i++;
        <tr>
            <th>
                @i
            </th>
            <th>
                @Html.DisplayFor(model => item.IDHocvien)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TenHocVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapDo)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteStudent", new { IDlh = @ViewBag.Idlh, IDhv = item.IDHocvien })|
                @Html.ActionLink("Add Score", "addScore", new { IDlh = @ViewBag.Idlh, IDhv = item.IDHocvien })|
                @Html.ActionLink("View Score", "viewScore", new { IDlh = @ViewBag.Idlh, IDhv = item.IDHocvien })
            </td>
        </tr>
    }
</table>
<div style="text-align:center">

    @Html.ActionLink("Back to list student null class", "themhvvaolop", new { IDlh = @ViewBag.Idlh })|
    @Html.ActionLink("Back to list class", "Lophoc")
</div>
