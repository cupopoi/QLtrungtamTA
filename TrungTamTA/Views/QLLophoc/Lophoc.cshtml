@model IEnumerable<TrungTamTA.Models.LopHoc>

@{
    ViewBag.Title = "Lophoc";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách lớp học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách lớp học</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
@if(TempData["AlertMessage"] != null)
{
        ViewBag.AlertMessage = TempData["AlertMessage"].ToString();
        TempData.Remove("AlertMessage");
    }
<p style="text-align:center;">
    @Html.ActionLink("Thêm lớp học", "Themlophoc", "QLLophoc")
</p>
@if (ViewBag.AlertMessage != null)
{
    <div class="alert alert-danger">@ViewBag.AlertMessage</div>
}
@if (TempData["AlertMessage"] != null)
{
    ViewBag.AlertMessage = TempData["AlertMessage"].ToString();
    TempData.Remove("AlertMessage");
}
<div class="content">
    <div class="container-fluid">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IDLophoc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenLopHoc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDGiangVien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDChuongTrinh)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(model => item.IDLophoc)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLopHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiangVien.TenGiangVien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChuongTrinhHoc.TenChuongTrinh)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Sualophoc", new { IDlh = item.IDLophoc }) |
                        @Html.ActionLink("Delete", "Xoalophoc", new { IDlh = item.IDLophoc }, new { onclick = "return confirm('Bạn có chắc chắn muốn xóa?');" })|
                        @Html.ActionLink("AddStudent", "themhvvaolop", new { IDlh = item.IDLophoc })|
                        @Html.ActionLink("View", "Xemhvtronglop", new { IDlh = item.IDLophoc })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
