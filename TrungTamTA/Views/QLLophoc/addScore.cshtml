@model TrungTamTA.Models.ChiTietLopHoc

@{
    ViewBag.Title = ViewBag.IDcation == 1 ? "Thêm điểm cho học viên" : "Sửa điểm cho học viên";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-sm-2 control-label">Tên học viên:</label>
                    <div class="col-sm-10">
                        @ViewBag.namehv
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Tên lớp học:</label>
                    <div class="col-sm-10">
                        @ViewBag.namelh
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Điểm nghe:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control form-control-user" placeholder="Nhập điểm nghe" name="Diemnghe">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Điểm nói:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control form-control-user" placeholder="Nhập điểm nói" name="Diemnoi">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Điểm đọc:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control form-control-user" placeholder="Điểm đọc" name="Diemdoc">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Điểm viết:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control form-control-user" placeholder="Nhập điểm viết" name="Diemviet">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Xemhvtronglop", new { IDlh = @ViewBag.Idlh })
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
                           
