@model TrungTamTA.Models.HocVien

@{
    ViewBag.Title = "Chi tiết học viên";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết học viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Chi tiết học viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<table class="table">
    <tr>
        <td>Hình Ảnh:</td>
        <td><img src="@Model.Hinh" alt="Hình ảnh" width="100" height="100" /></td>
    </tr>
    <tr>
        <td>ID học viên:</td>
        <td>@Html.DisplayFor(model => model.IDHocvien)</td>
    </tr>
    <tr>
        <td>Tên học viên:</td>
        <td>@Html.DisplayFor(model => model.TenHocVien)</td>
    </tr>
    <tr>
        <td>Ngày sinh:</td>
        <td>@Html.DisplayFor(model => model.NgaySinh)</td>
    </tr>
    <tr>
        <td>Địa chỉ:</td>
        <td>@Html.DisplayFor(model => model.DiaChi)</td>
    </tr>
    <tr>
        <td>Số điện thoại:</td>
        <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Html.DisplayFor(model => model.Email)</td>
    </tr>
    <tr>
        <td>Cấp độ:</td>
        <td>@Html.DisplayFor(model => model.CapDo)</td>
    </tr>
    <tr>
        <td>Trạng thái:</td>
        <td>@Html.DisplayFor(model => model.TrangThaiHV.TenTrangThai)</td>
    </tr>

</table>
<p>
    @Html.ActionLink("Sửa thông tin học viên", "Suahocvien", new { id = Model.IDHocvien }) |
    @Html.ActionLink("Xóa học viên", "Xoahocvien", new { IDhv = Model.IDHocvien })
</p>