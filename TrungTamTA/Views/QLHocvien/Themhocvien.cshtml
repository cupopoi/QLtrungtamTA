@model TrungTamTA.Models.HocVien

@{
    ViewBag.Title = "Themhocvien";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm học viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Thêm học viên</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b>Mã học viên:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" placeholder="Nhập ID (Ex: Số)" name="IDHocvien">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Tên học viên:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" placeholder="Nhập Tên (Ex: Nguyen Van A)" name="Tenhocvien">
                        <div style="color:red;">@ViewData["Loi2"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Ngày sinh:</b>
                    <div class="col-sm-12">
                        <input type="text" id="txtNgaySinh" name="Ngaysinh" placeholder="dd/mm/yyyy" />
                        <div style="color:red;">@ViewData["Loi3"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Địa chỉ:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername" placeholder="Nhập Địa Chỉ" name="DiaChi">
                        <div style="color:red;">@ViewData["Loi4"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Số điện thoại:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername" placeholder="Nhập Số điện thoại" name="Phone">
                        <div style="color:red;">@ViewData["Loi5"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Email:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername" placeholder="Nhập Email (Ex: abc@example.com)" name="Email">
                        <div style="color:red;">@ViewData["Loi6"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Hình ảnh</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Hinh, new { htmlAttributes = new { @class = "form-control" } })

                        <input type="file" name="fileUpload" id="fileUpload" accept="image/*" style="display:none;" />
                        <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                    </div>
                </div>
                <div class="form-group">
                    <b>Cấp độ:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername" placeholder="Nhập Cấp độ" name="Capdo">
                        <div style="color:red;">@ViewData["Loi6"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Trạng thái học:</b>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownList("IDTrangThai")
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    <div>
        @Html.ActionLink("Back to List", "Hocvien", "QLHocvien")
    </div>
    </div>
</div>
        @section upload
{
            <script>
                $(function () {
                    //khi người dùng nhấn vào nút có id là btnUpload
                    $('#btnUpload').click(function () {
                        //được gọi để kích hoạt sự kiện chọn tệp tin từ người dùng
                        $('#fileUpload').trigger('click');
                    });
                    //khi người dùng đã chọn một tệp tin hình ảnh
                    $('#fileUpload').change(function () {
                        // kiểm tra xem trình duyệt có hỗ trợ đối tượng FormData hay không
                        if (window.FormData !== undefined) {
                            var fileUpload = $('#fileUpload').get(0);
                            var files = fileUpload.files;
                            var formData = new FormData();
                            formData.append('file', files[0]);
                            //sử dụng AJAX để gửi yêu cầu POST tới đường dẫn '/QLHocvien/ProcessUpload' để xử lý tải lên hình ảnh.
                            $.ajax({
                                type: 'POST',
                                url: '/QLHocvien/ProcessUpload',
                                contentType: false,
                                processData: false,
                                data: formData,
                               // hình ảnh được hiển thị lên trang bằng cách cập nhật thuộc tính src của phần tử có id là pictureUpload
                               //và lưu vào phần tử có id là Hinh
                                success: function (urlImage) {
                                    $('#pictureUpload').attr('src', urlImage);
                                    $('#Hinh').val(urlImage);
                                },
                                error: function (err) {
                                    alert('Error: ' + err.statusText);
                                }
                            });
                        }
                    });
                });
            </script>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
