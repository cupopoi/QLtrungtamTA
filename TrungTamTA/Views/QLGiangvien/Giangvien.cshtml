@model IEnumerable<TrungTamTA.Models.GiangVien>

@{
    ViewBag.Title = "Giangvien";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách giảng viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách giảng viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}
<p>
    @Html.ActionLink("Thêm giảng viên", "Themgiangvien", "QLGiangvien")
</p>
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}

<table class="table">
    <tr>
        <th>
            Mã giảng viên
        </th>
        <th>
           Tên giảng viên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
           Số điện thoại
        </th>
        <th>
           Email
        </th>
        <th>
            Lương
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(model => item.IDGiangvien)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TenGiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Luong)
            </td>
            <td>
                @Html.ActionLink("Edit", "Suagiangvien", new { IDgv = item.IDGiangvien }) |
                @Html.ActionLink("Details", "Xemchitiet", new { IDgv = item.IDGiangvien }) |
                @Html.ActionLink("Delete", "Xoagiangvien", new { IDgv = item.IDGiangvien })|
                @{
                    bool isValid = true;
                    if (item.IDGiangvien == 0 || ViewBag.idaction == 0)
                    {
                        isValid = false;
                    }
                }

                @if (isValid && ViewBag.idaction == 1)
                {
                    @Html.ActionLink("AddToClass", "Themlophocdacogv", "QLLophoc", new { IDgv = item.IDGiangvien }, null)
                }
                else
                {
                    <div></div>
                }
                @if (isValid && ViewBag.idaction == 2)
                {
                    @Html.ActionLink("AddToClass", "Sualophoccogv", "QLLophoc", new { IDgv = item.IDGiangvien, IDlh = ViewBag.idlh }, null)
                }
                else
                {
                    <div></div>
                }

            </td>
        </tr>
        
           
      
    }


</table>


