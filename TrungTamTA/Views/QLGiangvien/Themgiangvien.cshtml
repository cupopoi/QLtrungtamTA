@model TrungTamTA.Models.GiangVien

@{
    ViewBag.Title = "Themgiangvien";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm giảng viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Thêm giảng viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b>Mã giảng viên:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập ID (Ex: Số)" name="IDGiangvien">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Tên giảng viên:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập Tên (Ex: Nguyen Van A)" name="Tengiangvien">
                        <div style="color:red;">@ViewData["Loi2"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Địa chỉ:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername"
                               placeholder="Nhập Địa Chỉ" name="DiaChi">
                        <div style="color:red;">@ViewData["Loi3"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Số điện thoại:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername"
                               placeholder="Nhập Số điện thoại" name="Phone">
                        <div style="color:red;">@ViewData["Loi4"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Email:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername"
                               placeholder="Nhập Email (Ex: abc@gmail.com)" name="Email">
                        <div style="color:red;">@ViewData["Loi5"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Hình giảng viên:</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Hinh, new { htmlAttributes = new { @class = "form-control" } })

                        <input type="file" name="fileUpload" id="fileUpload" accept="image/*"
                               style="display:none;" />
                        <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />

                    </div>
                </div>
                <div class="form-group">
                    <b>Hình bằng cấp:</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BangCap, new { htmlAttributes = new { @class = "form-control" } })
                        <input type="file" name="fileUpload1" id="fileUpload1" accept="image/*"
                               style="display:none;" />
                        <input type="button" id="btnUpload1" value="Chọn" class="btn btn-success" />

                    </div>
                </div>
                <div class="form-group">
                    <b>Mức lương:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user" id="exampleUsername"
                               placeholder="Nhập Lương" name="Luong">
                        <div style="color:red;">@ViewData["Loi6"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Giangvien","QLGiangvien")
        </div>
    </div>
</div>
        @section upload
{
            <script>
                $(function () {
                    $('#btnUpload').click(function () {
                        $('#fileUpload').trigger('click');
                    });
                });
                $('#fileUpload').change(function () {
                    if (window.FormData !== undefined) {
                        var fileUpload = $('#fileUpload').get(0);
                        var files = fileUpload.files;
                        var formData = new FormData();
                        formData.append('file', files[0]);

                        $.ajax(
                            {
                                type: 'POST',
                                url: '/QLGiangvien/ProcessUpload',
                                contentType: false,
                                processData: false,
                                data: formData,
                                success: function (urlImage) {

                                    $('#pictureUpload').attr('src', urlImage);
                                    $('#Hinh').val(urlImage);
                                },
                                error: function (err) {
                                    alert('Error ', err.statusText);



                                }
                            });
                    }
                });
                $(function () {
                    $('#btnUpload1').click(function () {
                        $('#fileUpload1').trigger('click');
                    });
                });
                $('#fileUpload1').change(function () {
                    if (window.FormData !== undefined) {
                        var fileUpload = $('#fileUpload1').get(0);
                        var files = fileUpload.files;
                        var formData = new FormData();
                        formData.append('file', files[0]);

                        $.ajax(
                            {
                                type: 'POST',
                                url: '/QLGiangvien/ProcessUpload',
                                contentType: false,
                                processData: false,
                                data: formData,
                                success: function (urlImage) {

                                    $('#pictureUpload').attr('src', urlImage);
                                    $('#BangCap').val(urlImage);
                                },
                                error: function (err) {
                                    alert('Error ', err.statusText);
                                }
                            });
                    }
                });
            </script>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

