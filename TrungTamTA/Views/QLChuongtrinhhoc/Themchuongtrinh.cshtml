@model TrungTamTA.Models.ChuongTrinhHoc

@{
    ViewBag.Title = "Themchuongtrinh";
    Layout = "~/Views/Shared/_layoutAD.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm chương trình học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "Home", null, Request.Url.Scheme)">Home</a></li>
                    <li class="breadcrumb-item active">Thêm chương trình học</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b>Mã chương trình học:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập mã của chương trình học (Ex: Số)" name="IDchuongtrinh">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Tên chương trình học:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập tên chương trình" name="Tenchuongtrinh">
                        <div style="color:red;">@ViewData["Loi2"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Số buổi học:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập số buổi học (Ex: 1 buổi/tuần)" name="Sobuoihoc">
                        <div style="color:red;">@ViewData["Loi3"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Thời lượng:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập thời lượng của chương trình (Ex: 1 tháng)" name="Thoiluong">
                        <div style="color:red;">@ViewData["Loi4"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Giá tiền:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Nhập giá tiền (Ex: Số)" name="Giatien">
                        <div style="color:red;">@ViewData["Loi5"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <b>Mô tả:</b>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Viết mô tả cho chương trình" name="Mota">
                        <div style="color:red;">@ViewData["Loi6"]</div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Chuongtrinhhoc")
        </div>
    </div>
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

